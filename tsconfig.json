{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "../ts",
    "module": "commonjs",
    "target": "es2015",
    "lib": [
      "es2017",
      "es2016",
      "es2015",
      "dom"
    ],
    "jsx": "react",
    "allowJs": false,
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "node_modules",
    "bower_modules",
    "config",
    "examples"
  ]
}
